<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dzikir_yok"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:id="@+id/dzikir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alhamdulillah"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="40sp"
        />

    <TextView
        android:id="@+id/nomer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <Button
        android:id="@+id/clik"
        android:layout_width="180dp"
        android:layout_height="95dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/rouded_button"
        android:gravity="center"
        android:text="@string/clik"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/zikirselanjutnya"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rouded_button"
        android:gravity="center"
        android:text="@string/pindah_dzikir_selanjutnya"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone"/>







</LinearLayout>